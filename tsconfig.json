{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "stories",
    "esModuleInterop": true,
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "module": "commonjs",
    "rootDirs": ["stories"],
    "strict": true,
    "target": "es5"
  },
  "include": ["stories/**/*"],
  "exclude": ["node_modules"]
}
